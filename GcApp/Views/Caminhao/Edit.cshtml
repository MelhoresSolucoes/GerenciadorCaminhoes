@model GcApp.ViewModels.CaminhaoViewModel

@{
    ViewData["Title"] = "Editando Caminhão";
}
<hr />
<h3>Editando Caminhão</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdModeloVeiculo" class="control-label">Modelo</label>
                  <select  asp-for="IdModeloVeiculo"  asp-items="@(new SelectList(Model.ListModelosVeiculos, nameof(ModeloVeiculo.Id), nameof(ModeloVeiculo.Modelo)))" class="form-control">
                  </select>
                <span asp-validation-for="IdModeloVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoFabricacao" class="control-label">Ano Fabricação</label>
                <select asp-for="AnoFabricacao" class="form-control">
                        <option value="@(DateTime.Now.Year)">@(DateTime.Now.Year)</option> 
                </select>  
                <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoModelo" class="control-label">Ano Modelo</label>
                <select asp-for="AnoModelo" class="form-control" value="">
                       <option value="@(DateTime.Now.Year)" >@(DateTime.Now.Year)</option> 
                       <option value="@(DateTime.Now.Year + 1)" >@(DateTime.Now.Year + 1)</option> 
                </select> 
                <span asp-validation-for="AnoModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetalhesTecnicos" class="control-label">Detalhes Técnicos</label>
                <input asp-for="DetalhesTecnicos" class="form-control" />
                <span asp-validation-for="DetalhesTecnicos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-primary" />
                <input type="submit" asp-action="Index" value="Voltar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
