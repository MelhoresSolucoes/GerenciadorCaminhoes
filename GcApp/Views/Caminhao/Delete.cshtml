@model GcApp.Models.Caminhao

@{
    ViewData["Title"] = "Excluir";
}

<h3>Confirma a exclusão deste veículo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Modelo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModeloVeiculo.Modelo)
        </dd>

        <dt class = "col-sm-2">
            Ano de Fabricação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoFabricacao)
        </dd>
        <dt class = "col-sm-2">
            Ano Modelo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoModelo)
        </dd>
        <dt class = "col-sm-2">
            Detalhes Técnicos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DetalhesTecnicos)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <input type="submit" asp-action="Index" value="Voltar" class="btn btn-dark"/>
    </form>
</div>
