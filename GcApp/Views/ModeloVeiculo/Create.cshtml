@model GcApp.Models.ModeloVeiculo

@{
    ViewData["Title"] = "Novo Modelo";
}
<h3>Incluir Novo Modelo</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label">Modelo</label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                  <input asp-for="Bloqueado" type="checkbox" class="custom-control-input" id="customCheck1">
                  <label asp-for="Bloqueado" class="custom-control-label" for="customCheck1">Bloqueado</label>
                  <span asp-validation-for="Bloqueado " class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-dark" />
                <input type="submit" asp-action="Index" value="Voltar" class="btn btn-dark"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
