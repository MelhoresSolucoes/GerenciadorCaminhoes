@model IEnumerable<GcApp.Models.ModeloVeiculo>

@{
    ViewData["Title"] = "Modelo de Veículo";
}

<p>
    <a class="btn btn-dark" asp-action="Create"  role="button">Incluir Modelo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bloqueado)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bloqueado)
            </td>
            
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a asp-action="Edit" type="button"  class="btn btn-secondary" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" type="button"  class="btn btn-secondary" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" type="button"  class="btn btn-secondary" asp-route-id="@item.Id">Excluir</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
